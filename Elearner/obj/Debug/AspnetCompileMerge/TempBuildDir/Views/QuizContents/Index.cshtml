@model IEnumerable<Elearner.Models.QuizContent>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Question.QuestionText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuestionAnswer.QuestionAnswerText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuestionType.QuestionTypeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quiz.QuizName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Question.QuestionText)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuestionAnswer.QuestionAnswerText)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuestionType.QuestionTypeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quiz.QuizName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.QuizContentId }) |
            @Html.ActionLink("Details", "Details", new { id=item.QuizContentId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.QuizContentId })
        </td>
    </tr>
}

</table>
